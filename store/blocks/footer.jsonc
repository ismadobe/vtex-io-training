{
    "footer": {
        "blocks": ["footer-layout.desktop", "footer-layout.mobile"]
    },
    "footer-layout.desktop": {
        "children": [
            "flex-layout.row#footer"
        ]
    },
    "footer-layout.mobile": {
        "children": [
            "flex-layout.row#footer"
        ]
    },
    "flex-layout.row#footer": {
        "children": [
            "rich-text#copyright"
        ],
        "props": {
            "marginTop": 8,
            "blockClass": ["black"] // permite colocar el color de fondo en negro vtex.flex-layout.css
        }
    },
    "rich-text#copyright": {
        "props": {
            "text": "**Derechos reservados BlackSip® © 2017 BlackSip.**",
            "textAlignment": "CENTER",
            "textPosition": "CENTER",
            "textColor": "c-on-emphasis" // color blanco establecido en style.config linea 227
        }
    }
}